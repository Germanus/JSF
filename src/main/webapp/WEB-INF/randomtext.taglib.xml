<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
	version="2.0">
	<namespace>randomtext</namespace>
	
	<tag>
		<tag-name>randomtext</tag-name>
		<component>
			<component-type>RandomText</component-type>
			<renderer-type>my.ilya.jsf.random.components.RandomTextRenderer</renderer-type>
		</component>
		
		<attribute>
			<!--  <required>true</required>
			<description>Type of random text to generate. Either gibberish or lorem</description>-->
			<name>textType</name>
			<type>java.lang.String</type>			
		</attribute>
		
		<attribute>
			<name>outputTag</name>
			<type>java.lang.String</type>
			<!--   <description>Type of HTML to generate. Either p for or ul for list.</description>-->			
		</attribute>
		
		<attribute>
			<name>count</name>
			<type>java.lang.Integer</type>
			<!--  <description>Number of parapraphs or items to return</description>
			<required>true</required>-->
		</attribute>
		
		<attribute>
			<name>minWords</name>
			<type>java.lang.Integer</type>
			<!--  <description>Minimum number of words to return in each para or item.</description>-->			
		</attribute>
		
		<attribute>
			<name>maxWords</name>
			<type>java.lang.Integer</type>
			<!-- <description>Minimum number of words to return in each para or item.</description>-->			
		</attribute>
				
	</tag>
</facelet-taglib>